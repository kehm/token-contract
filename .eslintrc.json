{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "plugin:import/typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "class-methods-use-this": "off",
        "indent": "off",
        "import/extensions": "off",
        "import/prefer-default-export": "off",
        "no-await-in-loop": "warn",
        "no-shadow": "warn",
        "no-unused-vars": "warn"
    }
}
